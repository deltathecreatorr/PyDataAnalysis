MainWindow {
    background-color: #1d2d44;
}

TitleBar {
    background-color: #0d1321;
}

TitleBar #title_label {
    font-size: 14px;
    color: #f5f6fa;
    font-family: "Segoe UI", Arial, sans-serif;
    font-weight: bold;
    padding-left: 8px;
}

TitleBar QPushButton {
    background-color: transparent;
    border: none;
    font-size: 14px;
    width: 45px;
    height: 30px;
    color: #f5f6fa;
}

TitleBar QPushButton:hover {
    background-color: #353b48;
}

TitleBar #btn_close:hover {
    background-color: #e84118;
    color: white;
}

#MainToolbar {
    background-color: #748cab;
    border: none;
    spacing: 10px;
    padding: 10px;
}
#FileButton {
    font-size: 14px;
    font-weight: bold;
    color: #f5f6fa;
    font-family: "Consolas";
}

#FileButton:hover {
    background-color: #353b48;
}

#FileButton::menu-indicator {
    image: none;
}

#FileMenu {
    background-color: #748cab;
    border: none;
    spacing: 8px;
    padding: 8px;
    font-size: 14px;
    font-weight: bold;
    font-family: "Consolas";
}

#ContentLabel {
    font-size: 24px; 
    color: #ffb703; 
    font-weight: bold;
